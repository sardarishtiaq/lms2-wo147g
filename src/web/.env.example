# Application Configuration
# -----------------------
# Name of the application for browser title and branding
VITE_APP_NAME="Multi-tenant CRM"

# API Configuration
# ----------------
# Base URL for API requests - must be HTTPS in production
# Format: protocol://hostname[:port]
VITE_API_URL="http://localhost:3000"

# API version matching backend configuration
# Must align with apiEndpoints.ts API_VERSION constant
VITE_API_VERSION="v1"

# WebSocket Configuration
# ----------------------
# WebSocket server URL for real-time updates
# Must use WSS protocol in production
VITE_WEBSOCKET_URL="ws://localhost:3000"

# Number of reconnection attempts for WebSocket
# Recommended range: 3-10
VITE_WEBSOCKET_RECONNECT_ATTEMPTS="5"

# Delay between reconnection attempts in milliseconds
# Recommended range: 1000-5000
VITE_WEBSOCKET_RECONNECT_DELAY="1000"

# WebSocket connection timeout in milliseconds
# Recommended range: 10000-30000
VITE_WEBSOCKET_TIMEOUT="20000"

# Authentication Configuration
# --------------------------
# Access token expiry time in seconds (15 minutes)
# Must not exceed 3600 seconds for security
VITE_AUTH_TOKEN_EXPIRY="900"

# Refresh token expiry time in seconds (7 days)
# Aligns with backend token configuration
VITE_REFRESH_TOKEN_EXPIRY="604800"

# Security Configuration
# --------------------
# Rate limiting window in seconds
VITE_RATE_LIMIT_WINDOW="60"

# Maximum requests per rate limit window
VITE_RATE_LIMIT_MAX_REQUESTS="100"

# CORS allowed origins (comma-separated)
# Must be configured to match deployment domains
VITE_CORS_ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"

# Monitoring & Analytics
# ---------------------
# Enable/disable analytics tracking
VITE_ENABLE_ANALYTICS="false"

# Sentry DSN for error tracking
# Leave empty to disable Sentry
VITE_SENTRY_DSN=""

# Feature Flags
# ------------
# Enable/disable real-time updates
VITE_ENABLE_REALTIME="true"

# Enable/disable debug logging
# Must be false in production
VITE_ENABLE_DEBUG_LOGGING="false"

# Content Security Policy
# ----------------------
# CSP nonce for inline scripts
# Must be configured for enhanced security
VITE_CSP_NONCE=""

# Cache Configuration
# -----------------
# Browser cache duration in seconds
VITE_CACHE_DURATION="3600"

# Maximum cache size in MB
VITE_MAX_CACHE_SIZE="50"

# Development Tools
# ---------------
# Enable/disable React Developer Tools
# Must be false in production
VITE_ENABLE_REACT_DEVTOOLS="false"

# Enable/disable Redux Developer Tools
# Must be false in production
VITE_ENABLE_REDUX_DEVTOOLS="false"